{
  "name": "Hide",
  "version": "1.0",
  "icons": {
    "16": "assets/icon.png",
    "48": "assets/icon.png",
    "128": "assets/icon.png"
  },
  "description": "Hides distracting elements",
  "permissions": ["https://weather.com/"],
  "content_scripts": [
    {
      "matches": ["https://weather.com/"],
      "js": ["js/contentScript.js"]
    }
  ],
  "browser_action": {
    "default_icon": "assets/icon.png"
  },
  "manifest_version": 2
}
